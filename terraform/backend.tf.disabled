# ===============================
# Terraform Backend Configuration
# ===============================
terraform {
  required_version = ">= 1.3.0"

  backend "s3" {
    bucket         = "asterra-tfstate-bucket"
    key            = "state/terraform.tfstate"
    region         = "us-east-1"
    dynamodb_table = "terraform-locks"
    encrypt        = true
  }
}

# ===============================
# AWS Provider
# ===============================
provider "aws" {
  region = var.aws_region
}
